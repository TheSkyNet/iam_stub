<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.phalcon.app</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>{{WORKING_DIRECTORY}}/phalcons</string>
        <string>up</string>
        <string>-d</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>{{WORKING_DIRECTORY}}</string>
    
    <key>UserName</key>
    <string>{{SERVICE_USER}}</string>
    
    <key>GroupName</key>
    <string>{{SERVICE_GROUP}}</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/var/log/phalcon-app.out.log</string>
    
    <key>StandardErrorPath</key>
    <string>/var/log/phalcon-app.err.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
        <key>DOCKER_COMPOSE_PROJECT_NAME</key>
        <string>{{PROJECT_NAME}}</string>
    </dict>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>ThrottleInterval</key>
    <integer>10</integer>
    
    <key>ExitTimeOut</key>
    <integer>120</integer>
</dict>
</plist>