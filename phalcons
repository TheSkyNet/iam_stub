#!/usr/bin/env bash

UNAMEOUT="$(uname -s)"

# Verify operating system is supported...
case "${UNAMEOUT}" in
    Linux*)             MACHINE=linux;;
    Darwin*)            MACHINE=mac;;
    *)                  MACHINE="UNKNOWN"
esac

if [ "$MACHINE" == "UNKNOWN" ]; then
    echo "Unsupported operating system [$(uname -s)]. Laravel Phalcon supports macOS, Linux, and Windows (WSL2)." >&2

    exit 1
fi

# Determine if stdout is a terminal...
if test -t 1; then
    # Determine if colors are supported...
    ncolors=$(tput colors)

    if test -n "$ncolors" && test "$ncolors" -ge 8; then
        BOLD="$(tput bold)"
        YELLOW="$(tput setaf 3)"
        GREEN="$(tput setaf 2)"
        NC="$(tput sgr0)"
    fi
fi

# Function that prints the available commands...
function display_help {
    echo "Phalcon"
    echo
    echo "${YELLOW}Usage:${NC}" >&2
    echo "  phalcons COMMAND [options] [arguments]"
    echo
    echo "Unknown commands are passed to the docker-compose binary."
    echo
    echo "${YELLOW}docker-compose Commands:${NC}"
    echo "  ${GREEN}phalcons up${NC}        Start the application"
    echo "  ${GREEN}phalcons up -d${NC}     Start the application in the background"
    echo "  ${GREEN}phalcons stop${NC}      Stop the application"
    echo "  ${GREEN}phalcons restart${NC}   Restart the application"
    echo "  ${GREEN}phalcons ps${NC}        Display the status of all containers"
    echo "  ${GREEN}phalcons build --no-cache${NC}       Rebuild all of the Phalcon containers"
    echo
    echo "${YELLOW}Phalcon Commands:${NC}"
    echo "  ${GREEN}phalcons phalcon ...${NC}          Run an Phalcon command"
    echo "  ${GREEN}phalcons phalcon queue:work${NC}"
    echo "  ${GREEN}phalcons command ...${NC}          Run a custom command"
    echo "  ${GREEN}phalcons command list${NC}         List all available commands"
    echo "  ${GREEN}phalcons command test:mail user@example.com -v${NC}"
    echo
    echo "${YELLOW}PHP Commands:${NC}"
    echo "  ${GREEN}phalcons php ...${NC}   Run a snippet of PHP code"
    echo "  ${GREEN}phalcons php -v${NC}"
    echo
    echo "${YELLOW}Composer Commands:${NC}"
    echo "  ${GREEN}phalcons composer ...${NC}                       Run a Composer command"
    echo "  ${GREEN}phalcons composer require laravel/sanctum${NC}"
    echo
    echo
    echo "${YELLOW}NPM Commands:${NC}"
    echo "  ${GREEN}phalcons npm ...${NC}        Run a npm command"
    echo "  ${GREEN}phalcons npm run prod${NC}"
    echo
    echo
    echo "${YELLOW}Database Commands:${NC}"
    echo "  ${GREEN}phalcons mysql${NC}             Start a MySQL CLI session within the 'mysql' container"
    echo "  ${GREEN}phalcons migrate${NC}           Run database migrations"
    echo "  ${GREEN}phalcons migrate:generate${NC}  Generate database migrations"
    echo "  ${GREEN}phalcons migrate:list${NC}      List all migrations"
    echo
    echo "${YELLOW}Debugging:${NC}"
    echo "  ${GREEN}phalcons debug ...${NC}          Run an Phalcon command in debug mode"
    echo "  ${GREEN}phalcons debug queue:work${NC}"
    echo
    echo "${YELLOW}Running Tests:${NC}"
    echo "  ${GREEN}phalcons test${NC}          Run the PHPUnit tests via the Phalcon test command"
    echo
    echo "${YELLOW}Container CLI:${NC}"
    echo "  ${GREEN}phalcons shell${NC}        Start a shell session within the application container"
    echo "  ${GREEN}phalcons bash${NC}         Alias for 'phalcons shell'"
    echo "  ${GREEN}phalcons root-shell${NC}   Start a root shell session within the application container"
    echo "  ${GREEN}phalcons root-bash${NC}    Alias for 'phalcons root-shell'"
    echo "  ${GREEN}phalcons tinker${NC}       Start a new Laravel Tinker session"
    echo
    echo "${YELLOW}Sharing:${NC}"
    echo "  ${GREEN}phalcons share${NC}   Share the application publicly via a temporary URL"
    echo
    echo "${YELLOW}Binaries:${NC}"
    echo "  ${GREEN}phalcons bin ...${NC}   Run Composer binary scripts from the vendor/bin directory"
    echo
    echo "${YELLOW}Service Management:${NC}"
    echo "  ${GREEN}phalcons service:install${NC}    Install the application as a system service"
    echo "  ${GREEN}phalcons service:start${NC}      Start the application service"
    echo "  ${GREEN}phalcons service:stop${NC}       Stop the application service"
    echo "  ${GREEN}phalcons service:restart${NC}    Restart the application service"
    echo "  ${GREEN}phalcons service:status${NC}     Check the application service status"
    echo "  ${GREEN}phalcons service:uninstall${NC}  Remove the application service"
    echo
    exit 1
}

# Proxy the "help" command...
if [ $# -gt 0 ]; then
    if [ "$1" == "help" ] || [ "$1" == "-h" ] || [ "$1" == "-help" ] || [ "$1" == "--help" ]; then
        display_help
    fi
else
    display_help
fi

# Source the ".env" file so Laravel's environment variables are available...
if [ ! -z "$APP_ENV" ] && [ -f ./.env.$APP_ENV ]; then
  source ./.env.$APP_ENV;
elif [ -f ./.env ]; then
  source ./.env;
fi

# Define environment variables...
export APP_PORT=${APP_PORT:-80}
export APP_SERVICE=${APP_SERVICE:-"laravel.test"}
export DB_PORT=${DB_PORT:-3306}
export WWWUSER=${WWWUSER:-$UID}
export WWWGROUP=${WWWGROUP:-$(id -g)}

export SAIL_FILES=${SAIL_FILES:-""}
export SAIL_SHARE_DASHBOARD=${SAIL_SHARE_DASHBOARD:-4040}
export SAIL_SHARE_SERVER_HOST=${SAIL_SHARE_SERVER_HOST:-"laravel-phalcons.site"}
export SAIL_SHARE_SERVER_PORT=${SAIL_SHARE_SERVER_PORT:-8080}
export SAIL_SHARE_SUBDOMAIN=${SAIL_SHARE_SUBDOMAIN:-""}
export SAIL_SHARE_DOMAIN=${SAIL_SHARE_DOMAIN:-""}

# Function that outputs Phalcon is not running...
function phalcons_is_not_running {
    echo "${BOLD}Phalcon is not running.${NC}" >&2
    echo "" >&2
    echo "${BOLD}You may Phalcon using the following commands:${NC} './vendor/bin/phalcons up' or './vendor/bin/phalcons up -d'" >&2

    exit 1
}

# Define Docker Compose command prefix...
docker compose &> /dev/null
if [ $? == 0 ]; then
    DOCKER_COMPOSE=(docker compose)
else
    DOCKER_COMPOSE=(docker-compose)
fi

if [ -n "$SAIL_FILES" ]; then
    # Convert SAIL_FILES to an array...
    IFS=':' read -ra SAIL_FILES <<< "$SAIL_FILES"

    for FILE in "${SAIL_FILES[@]}"; do
        if [ -f "$FILE" ]; then
            DOCKER_COMPOSE+=(-f "$FILE")
        else
            echo "${BOLD}Unable to find Docker Compose file: '${FILE}'${NC}" >&2

            exit 1
        fi
    done
fi

EXEC="yes"

if [ -z "$SAIL_SKIP_CHECKS" ]; then
    # Ensure that Docker is running...
    if ! docker info > /dev/null 2>&1; then
        echo "${BOLD}Docker is not running.${NC}" >&2

        exit 1
    fi

    # Determine if Phalcon is currently up...
    if "${DOCKER_COMPOSE[@]}" ps "$APP_SERVICE" 2>&1 | grep 'Exit\|exited'; then
        echo "${BOLD}Shutting down old Phalcon processes...${NC}" >&2

        "${DOCKER_COMPOSE[@]}" down > /dev/null 2>&1

        EXEC="no"
    elif [ -z "$("${DOCKER_COMPOSE[@]}" ps -q)" ]; then
        EXEC="no"
    fi
fi

ARGS=()

# Proxy PHP commands to the "php" binary on the application container...
if [ "$1" == "php" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "php" "$@")
    else
        phalcons_is_not_running
    fi

# Proxy vendor binary commands on the application container...
elif [ "$1" == "bin" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" ./vendor/bin/"$@")
    else
        phalcons_is_not_running
    fi

# Proxy custom commands to the command runner...
elif [ "$1" == "command" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "php" "bin/command.php" "$@")
    else
        phalcons_is_not_running
    fi

# Proxy docker-compose commands to the docker-compose binary on the application container...
elif [ "$1" == "docker-compose" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "${DOCKER_COMPOSE[@]}")
    else
        phalcons_is_not_running
    fi

# Proxy Composer commands to the "composer" binary on the application container...
elif [ "$1" == "composer" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "composer" "$@")
    else
        phalcons_is_not_running
    fi

# Proxy Phalcon commands to the "phalcon" binary on the application container...
elif [ "$1" == "phalcon" ] || [ "$1" == "art" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" phalcon "$@")
    else
        phalcons_is_not_running
    fi

# Proxy the "debug" command to the "php phalcon" binary on the application container with xdebug enabled...
elif [ "$1" == "debug" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons -e XDEBUG_SESSION=1)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" phalcon "$@")
    else
        phalcons_is_not_running
    fi

# Proxy the "test" command to the "phalcon test" Phalcon command...
elif [ "$1" == "test" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" phalcon test "$@")
    else
        phalcons_is_not_running
    fi

# Initiate a Laravel Tinker session within the application container...
elif [ "$1" == "tinker" ] ; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" phalcon tinker)
    else
        phalcons_is_not_running
    fi

# Proxy Node commands to the "node" binary on the application container...
elif [ "$1" == "node" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" node "$@")
    else
        phalcons_is_not_running
    fi

# Proxy NPM commands to the "npm" binary on the application container...
elif [ "$1" == "npm" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" npm "$@")
    else
        phalcons_is_not_running
    fi

# Proxy NPX commands to the "npx" binary on the application container...
elif [ "$1" == "npx" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" npx "$@")
    else
        phalcons_is_not_running
    fi


# Initiate a MySQL CLI terminal session within the "mysql" container...
elif [ "$1" == "mysql" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=(mysql bash -c)
        ARGS+=("MYSQL_PWD=\${MYSQL_PASSWORD} mysql -u \${MYSQL_USER} \${MYSQL_DATABASE}")
    else
        phalcons_is_not_running
    fi


# Initiate a Bash shell within the application container...
elif [ "$1" == "shell" ] || [ "$1" == "bash" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" bash "$@")
    else
        phalcons_is_not_running
    fi

# Initiate a root user Bash shell within the application container...
elif [ "$1" == "root-shell" ] || [ "$1" == "root-bash" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" bash "$@")
    else
        phalcons_is_not_running
    fi

# Initiate a Redis CLI terminal session within the "redis" container...
elif [ "$1" == "redis" ] ; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=(redis redis-cli)
    else
        phalcons_is_not_running
    fi
# Proxy migration commands to phalcon-migrations
elif [ "$1" == "migrate" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" ./vendor/bin/phalcon-migrations run --config=./bin/migrations.php)
    else
        phalcons_is_not_running
    fi

# Generate migrations
elif [ "$1" == "migrate:generate" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        if [ $# -gt 0 ]; then
            # If there are additional arguments, pass them through
            ARGS+=("$APP_SERVICE" ./vendor/bin/phalcon-migrations generate --config=./bin/migrations.php "$@")
        else
            # If no additional arguments, run basic generate
            ARGS+=("$APP_SERVICE" ./vendor/bin/phalcon-migrations generate --config=migrations.php)
        fi
    else
        phalcons_is_not_running
    fi

# List migrations
elif [ "$1" == "migrate:list" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u phalcons)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" ./vendor/bin/phalcon-migrations list --config=migrations.php)
    else
        phalcons_is_not_running
    fi
# Run database seeders
elif [ "$1" == "migrate:seed" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -u www-data)
        [ ! -t 0 ] && ARGS+=(-T)

        # Pass all additional arguments to the seeder
        if [ $# -gt 0 ]; then
            ARGS+=("$APP_SERVICE" php bin/seeder.php "$@")
        else
            ARGS+=("$APP_SERVICE" php bin/seeder.php)
        fi
    else
        phalcons_is_not_running
    fi

# Service management commands
elif [ "$1" == "service:install" ]; then
    shift 1
    
    # Get current directory and user
    CURRENT_DIR=$(pwd)
    CURRENT_USER=$(whoami)
    CURRENT_GROUP=$(id -gn)
    PROJECT_NAME=$(basename "$CURRENT_DIR")
    
    echo "${BOLD}Installing Phalcon Application Service...${NC}"
    
    # Detect the operating system and service manager
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            # SystemD
            echo "Detected SystemD service manager"
            SERVICE_FILE="/etc/systemd/system/phalcon-app.service"
            
            # Create service file from template
            sudo cp service-templates/phalcon-app.service "$SERVICE_FILE"
            sudo sed -i "s|{{WORKING_DIRECTORY}}|$CURRENT_DIR|g" "$SERVICE_FILE"
            sudo sed -i "s|{{SERVICE_USER}}|$CURRENT_USER|g" "$SERVICE_FILE"
            sudo sed -i "s|{{SERVICE_GROUP}}|$CURRENT_GROUP|g" "$SERVICE_FILE"
            sudo sed -i "s|{{PROJECT_NAME}}|$PROJECT_NAME|g" "$SERVICE_FILE"
            
            # Reload systemd and enable service
            sudo systemctl daemon-reload
            sudo systemctl enable phalcon-app.service
            
            echo "${GREEN}✓ SystemD service installed successfully${NC}"
            echo "Use: ${YELLOW}./phalcons service:start${NC} to start the service"
            
        elif [ -d "/etc/init.d" ]; then
            # Init.d
            echo "Detected Init.d service manager"
            SERVICE_FILE="/etc/init.d/phalcon-app"
            
            # Create service file from template
            sudo cp service-templates/phalcon-app.init "$SERVICE_FILE"
            sudo sed -i "s|{{WORKING_DIRECTORY}}|$CURRENT_DIR|g" "$SERVICE_FILE"
            sudo sed -i "s|{{SERVICE_USER}}|$CURRENT_USER|g" "$SERVICE_FILE"
            sudo chmod +x "$SERVICE_FILE"
            
            # Enable service
            if command -v chkconfig >/dev/null 2>&1; then
                sudo chkconfig --add phalcon-app
                sudo chkconfig phalcon-app on
            elif command -v update-rc.d >/dev/null 2>&1; then
                sudo update-rc.d phalcon-app defaults
            fi
            
            echo "${GREEN}✓ Init.d service installed successfully${NC}"
            echo "Use: ${YELLOW}./phalcons service:start${NC} to start the service"
        else
            echo "${BOLD}No supported service manager found on this Linux system${NC}" >&2
            exit 1
        fi
        
    elif [ "$MACHINE" == "mac" ]; then
        # macOS LaunchD
        echo "Detected macOS LaunchD service manager"
        SERVICE_FILE="$HOME/Library/LaunchAgents/com.phalcon.app.plist"
        
        # Create service file from template
        cp service-templates/com.phalcon.app.plist "$SERVICE_FILE"
        sed -i '' "s|{{WORKING_DIRECTORY}}|$CURRENT_DIR|g" "$SERVICE_FILE"
        sed -i '' "s|{{SERVICE_USER}}|$CURRENT_USER|g" "$SERVICE_FILE"
        sed -i '' "s|{{SERVICE_GROUP}}|$CURRENT_GROUP|g" "$SERVICE_FILE"
        sed -i '' "s|{{PROJECT_NAME}}|$PROJECT_NAME|g" "$SERVICE_FILE"
        
        echo "${GREEN}✓ LaunchD service installed successfully${NC}"
        echo "Use: ${YELLOW}./phalcons service:start${NC} to start the service"
    else
        echo "${BOLD}Unsupported operating system for service installation${NC}" >&2
        exit 1
    fi

elif [ "$1" == "service:start" ]; then
    shift 1
    
    echo "${BOLD}Starting Phalcon Application Service...${NC}"
    
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            sudo systemctl start phalcon-app.service
            echo "${GREEN}✓ Service started successfully${NC}"
        elif [ -f "/etc/init.d/phalcon-app" ]; then
            sudo service phalcon-app start
            echo "${GREEN}✓ Service started successfully${NC}"
        else
            echo "${BOLD}Service not installed. Run: ./phalcons service:install${NC}" >&2
            exit 1
        fi
    elif [ "$MACHINE" == "mac" ]; then
        launchctl load "$HOME/Library/LaunchAgents/com.phalcon.app.plist"
        echo "${GREEN}✓ Service started successfully${NC}"
    fi

elif [ "$1" == "service:stop" ]; then
    shift 1
    
    echo "${BOLD}Stopping Phalcon Application Service...${NC}"
    
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            sudo systemctl stop phalcon-app.service
            echo "${GREEN}✓ Service stopped successfully${NC}"
        elif [ -f "/etc/init.d/phalcon-app" ]; then
            sudo service phalcon-app stop
            echo "${GREEN}✓ Service stopped successfully${NC}"
        else
            echo "${BOLD}Service not installed. Run: ./phalcons service:install${NC}" >&2
            exit 1
        fi
    elif [ "$MACHINE" == "mac" ]; then
        launchctl unload "$HOME/Library/LaunchAgents/com.phalcon.app.plist"
        echo "${GREEN}✓ Service stopped successfully${NC}"
    fi

elif [ "$1" == "service:restart" ]; then
    shift 1
    
    echo "${BOLD}Restarting Phalcon Application Service...${NC}"
    
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            sudo systemctl restart phalcon-app.service
            echo "${GREEN}✓ Service restarted successfully${NC}"
        elif [ -f "/etc/init.d/phalcon-app" ]; then
            sudo service phalcon-app restart
            echo "${GREEN}✓ Service restarted successfully${NC}"
        else
            echo "${BOLD}Service not installed. Run: ./phalcons service:install${NC}" >&2
            exit 1
        fi
    elif [ "$MACHINE" == "mac" ]; then
        launchctl unload "$HOME/Library/LaunchAgents/com.phalcon.app.plist" 2>/dev/null || true
        launchctl load "$HOME/Library/LaunchAgents/com.phalcon.app.plist"
        echo "${GREEN}✓ Service restarted successfully${NC}"
    fi

elif [ "$1" == "service:status" ]; then
    shift 1
    
    echo "${BOLD}Checking Phalcon Application Service Status...${NC}"
    
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            systemctl status phalcon-app.service --no-pager
        elif [ -f "/etc/init.d/phalcon-app" ]; then
            service phalcon-app status
        else
            echo "${BOLD}Service not installed. Run: ./phalcons service:install${NC}" >&2
            exit 1
        fi
    elif [ "$MACHINE" == "mac" ]; then
        if launchctl list | grep -q "com.phalcon.app"; then
            echo "${GREEN}✓ Service is running${NC}"
            launchctl list com.phalcon.app
        else
            echo "${YELLOW}Service is not running${NC}"
        fi
    fi

elif [ "$1" == "service:uninstall" ]; then
    shift 1
    
    echo "${BOLD}Uninstalling Phalcon Application Service...${NC}"
    
    if [ "$MACHINE" == "linux" ]; then
        if command -v systemctl >/dev/null 2>&1; then
            sudo systemctl stop phalcon-app.service 2>/dev/null || true
            sudo systemctl disable phalcon-app.service 2>/dev/null || true
            sudo rm -f /etc/systemd/system/phalcon-app.service
            sudo systemctl daemon-reload
            echo "${GREEN}✓ SystemD service uninstalled successfully${NC}"
        elif [ -f "/etc/init.d/phalcon-app" ]; then
            sudo service phalcon-app stop 2>/dev/null || true
            if command -v chkconfig >/dev/null 2>&1; then
                sudo chkconfig phalcon-app off
                sudo chkconfig --del phalcon-app
            elif command -v update-rc.d >/dev/null 2>&1; then
                sudo update-rc.d -f phalcon-app remove
            fi
            sudo rm -f /etc/init.d/phalcon-app
            echo "${GREEN}✓ Init.d service uninstalled successfully${NC}"
        else
            echo "${BOLD}No service installation found${NC}" >&2
        fi
    elif [ "$MACHINE" == "mac" ]; then
        launchctl unload "$HOME/Library/LaunchAgents/com.phalcon.app.plist" 2>/dev/null || true
        rm -f "$HOME/Library/LaunchAgents/com.phalcon.app.plist"
        echo "${GREEN}✓ LaunchD service uninstalled successfully${NC}"
    fi

# Pass unknown commands to the "docker-compose" binary...
else
    ARGS+=("$@")
fi

# Run Docker Compose with the defined arguments...
"${DOCKER_COMPOSE[@]}" "${ARGS[@]}"
