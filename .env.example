# Phalcon Stub Project Environment Configuration
# Copy this file to .env and update the values for your project

# Application Configuration
APP_NAME="Your Project Name"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration
DB_ADAPTER=Postgresql
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=phalcons
DB_PASSWORD=secret
DB_NAME=phalcons

# Docker Configuration
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
FORWARD_MEILISEARCH_PORT=7700
FORWARD_MAILHOG_PORT=1025
FORWARD_MAILHOG_DASHBOARD_PORT=8025

# Email Service Configuration
MAIL_PROVIDER=mailhog
MAIL_FROM_EMAIL=noreply@yourproject.com
MAIL_FROM_NAME="Your Project Name"

# MailHog Configuration (for development)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
MAILHOG_USERNAME=
MAILHOG_PASSWORD=
MAILHOG_ENCRYPTION=

# Resend Configuration (for production)
RESEND_API_KEY=
RESEND_ENDPOINT=https://api.resend.com

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_USE_TLS=true
PUSHER_HOST=
PUSHER_PORT=
PUSHER_SCHEME=https
PUSHER_VERIFY_SSL=true
PUSHER_DISABLE_STATS=false