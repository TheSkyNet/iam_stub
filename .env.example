# Phalcon Stub Project Environment Configuration
# Copy this file to .env and update the values for your project

# Application Configuration
APP_NAME="Your Project Name"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Optional: Public frontend auth timers (consumed at build time by Laravel Mix)
# Set MIX_INACTIVITY_TIMEOUT_MINUTES to 0 or -1 to disable inactivity auto-logout entirely
MIX_INACTIVITY_TIMEOUT_MINUTES=30
# How often the client checks token validity/refresh, in minutes (default 5)
MIX_TOKEN_CHECK_INTERVAL_MINUTES=5

# Database Configuration
DB_ADAPTER=Postgresql
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=phalcons
DB_PASSWORD=secret
DB_NAME=phalcons

# Docker Configuration
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
FORWARD_MEILISEARCH_PORT=7700
FORWARD_MAILHOG_PORT=1025
FORWARD_MAILHOG_DASHBOARD_PORT=8025

# Email Service Configuration
MAIL_PROVIDER=mailhog
MAIL_FROM_EMAIL=noreply@yourproject.com
MAIL_FROM_NAME="Your Project Name"

# MailHog Configuration (for development)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
MAILHOG_USERNAME=
MAILHOG_PASSWORD=
MAILHOG_ENCRYPTION=

# Resend Configuration (for production)
RESEND_API_KEY=
RESEND_ENDPOINT=https://api.resend.com

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
PUSHER_USE_TLS=true
PUSHER_HOST=
PUSHER_PORT=
PUSHER_SCHEME=https
PUSHER_VERIFY_SSL=true
PUSHER_DISABLE_STATS=false

# JWT Authentication Configuration
# Access token lifetime in seconds (default: 3600 = 1 hour)
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRY=3600
# Refresh token lifetime in seconds (default: 604800 = 7 days)
JWT_REFRESH_TOKEN_EXPIRY=604800
JWT_ISSUER=phalcon-stub
JWT_AUDIENCE=phalcon-stub-users

# Example for long-lived sessions (uncomment to use):
# JWT_ACCESS_TOKEN_EXPIRY=86400        # 24 hours
# JWT_REFRESH_TOKEN_EXPIRY=31536000    # ~1 year
# MIX_INACTIVITY_TIMEOUT_MINUTES=0     # disable inactivity auto-logout